; Initialises a new game

    LDX #4
    JSR set_colour
    LDA #0
    STA xoffset
    STA zoffset

    STA xthrust
    STA ythrust
    STA zthrust
    STA zangle
    STA spiny
    STA spinz

    LDA #192
    STA yangle

    LDA #32
    LDA #32
    STA player_x
    STA player_z
    LDA #127
    STA mapx
    STA mapz

    LDA #0
    STA heighty
    STA player_y + 1
    STA current_score
    STA current_score + 1
    STA current_score + 2
    LDA #platheight
    STA player_y

    LDA #&99
    STA current_fuel
    STA current_fuel + 1
    LDA #1
    STA update_fuel

    LDA #0
    STA maxshipy
