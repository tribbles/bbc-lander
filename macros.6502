; Some macros...
sysvia = &fe40

; Decrements the thrust amount
MACRO THRUSTDEC addr
{
; Reduces the thrust value
    LDA addr
    BEQ noshrink
    BMI incshrink
    DEC addr
    BPL noshrink
.incshrink
    INC addr
.noshrink
}
ENDMACRO

; Adds the thrust to the 
MACRO THRUSTADD addr
{
; X and Y are preserved, but N and Z must be set from the load of the add
    BEQ noadd
    BMI negadd
    CLC
    ADC addr
    BMI nunflow
    CMP #95
    BCC novflow
    LDA #95
.novflow
    STA addr
    JMP noadd
.negadd
    CLC
    ADC addr
    BPL nunflow
    CMP #LO(-95)
    BCS nunflow
    LDA #LO(-95)
.nunflow
    STA addr
.noadd
}
ENDMACRO

; 8-bit pseudo random number generator
MACRO RAND8
; Taken from http://www.6502.org/users/mycorner/6502/code/prng.html
{
    LDA rand_seed
    ASL A
    BCC no_eor
    EOR #&cf
.no_eor
    STA rand_seed
}
ENDMACRO

MACRO RAND16
; Taken from http://www.6502.org/users/mycorner/6502/code/prng.html
{
    LDA mathc
    ASL A
    ROL mathc + 1
    BCC no_eor
    EOR #&d7
.no_eor
    STA mathc
}
ENDMACRO

MACRO THRUSTSOUND
{
    
    LDA #7
    LDX #LO(thrust_sndblk)
    LDY #HI(thrust_sndblk)
    JSR osword
}
ENDMACRO
